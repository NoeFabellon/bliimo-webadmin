<% content_for :header do %>
  <div class="uk-alert-danger" uk-alert>
    <a class="uk-alert-close" uk-close></a>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </div>
<% end %>

<% content_for :content do %>
  <div class="uk-vertical-align uk-text-center uk-height-1-1" id="login">

    <div class="uk-container uk-container-center">
      <div class="uk-grid">
        <div class="uk-vertical-align-middle" style="width: 450px;">
        <%= image_tag("logo.png") %>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <fieldset class="uk-fieldset">

              

                <div class="uk-margin">
                  <div class="uk-inline uk-width-1-1">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "uk-input uk-form-large uk-background-secondary", placeholder: "Email" %>
                  </div>
                </div>
                <div class="uk-margin">
                  <div class="uk-inline uk-width-1-1">
                    <%= f.password_field :password, autocomplete: "off", class: "uk-input uk-form-large uk-background-secondary", placeholder: "Password" %>
                  </div>
                </div>

                <div class="uk-margin-auto uk-margin-auto-vertical uk-padding-small">
                    <label><input class="uk-checkbox uk-background-default" type="checkbox"> REMEMBER ME</label>
                </div>
                

                <div class="uk-form-row uk-margin-small-top">
                  <%= f.submit "Login", class: "uk-button uk-button-primary uk-button-primary uk-button-small uk-width-1-3" %>
                </div>

                <div class="uk-margin-medium-top">
                    <a class="uk-link-text" href="">FORGOT PASSWORD?</a>
                </div>

                <div class="uk-form-row">
                  <% if false %>
                    <%= render "devise/shared/links" %>
                  <% end %>
                </div>

            

            </fieldset>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
