<% content_for :header do %>
  <div class="uk-alert-danger" uk-alert>
    <a class="uk-alert-close" uk-close></a>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </div>
<% end %>

<% content_for :content do %>
  <div class="uk-vertical-align uk-text-center uk-height-1-1">
    <div class="uk-vertical-align-middle" style="width: 250px;">
      <img class="uk-margin-bottom" width="140" height="120" src="data:image/svg+xml;base64," alt="">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :multipart => true, :remote=>true) do |f| %>

        <div class="uk-form-row">
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "uk-input" %>
        </div>

        <div class="uk-form-row">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "uk-input" %>
        </div>

        <div class="uk-form-row">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: "uk-input" %>
        </div>
        <div class="uk-form-row">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "uk-input" %>
        </div>
 
        <div class="uk-form-row">
          <%= f.submit "Sign up", class: "uk-button uk-button-primary uk-width-1-1 uk-margin-small-bottom" %>
        </div>
        <div class="uk-form-row">
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
