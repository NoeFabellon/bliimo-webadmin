<div class="nature-card uk-first-column" style="transform: translateY(0px);">
  <div class="uk-card uk-card-small uk-card-default">
    <div class="uk-card-header">
      <div class="uk-grid uk-grid-small uk-text-small" data-uk-grid="">
        <div class="uk-width-expand uk-first-column">
          <span class="cat-txt">Nature / Outdoor</span>
        </div>
        <div class="uk-width-auto uk-text-right uk-text-muted">
          <span data-uk-icon="icon:clock; ratio: 0.8" class="uk-icon"><svg width="16" height="16" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"> <circle fill="none" stroke="#000" stroke-width="1.1" cx="10" cy="10" r="9"></circle> <rect x="9" y="4" width="1" height="7"></rect> <path fill="none" stroke="#000" stroke-width="1.1" d="M13.018,14.197 L9.445,10.625"></path></svg></span> <%= post.created_at.strftime("%m/%d/%Y") %>
        </div>
      </div>
    </div>
    <div class="uk-card-media">
      <div class="uk-inline-clip uk-transition-toggle" tabindex="0">
        <img class="lazy" data-src="/random-img.jpg" data-width="400" data-height="300" data-uk-img="" alt="" src="/random-img.jpg">
      </div>
      
    </div>
    <div class="uk-card-body">
      <h6 class="uk-margin-small-bottom uk-margin-remove-adjacent uk-text-bold"><%= post.title%></h6>
      <p class="uk-text-small uk-text-muted"></p>
    </div>
    <div class="uk-card-footer">
      <div class="uk-grid uk-grid-small uk-grid-divider uk-flex uk-flex-middle" data-uk-grid="">
        <div class="uk-width-expand uk-text-small uk-first-column">
          by: John Doe
        </div>
      </div>
    </div>
  </div>
</div>
