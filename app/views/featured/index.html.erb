<% content_for :header do %> <%= render 'shared/menu' %> <% end %> <% content_for :side do %> <%= render 'shared/side' %> <% end %> <% content_for :content do %>
<div class="main uk-section">
  <div class="uk-container uk-container-expand uk-position-relative uk-margin-large-top uk-padding-small">
    <div class="uk-grid uk-margin-remove">
      <div class="uk-padding-remove"><h2>Featured</h2></div>
    </div>
    <div class="uk-grid uk-width-1-1 uk-margin-remove">
      <div class="uk-padding-small">
        <div class="uk-grid uk-margin-remove uk-width-1-1">
          <div class=" uk-margin-top uk-padding-remove"><span uk-icon="icon: search"></span></div>
          <div class="uk-inline uk-padding-small">
            <button class="uk-button uk-padding-small uk-padding-remove-top uk-padding-remove-bottom uk-text-capitalize partners-dropdown" type="button">Search from<span uk-icon="icon: triangle-down" class="uk-margin-left"></span></button>
            <div uk-dropdown="mode: click">
              <li><a href="#" class="dropdown-option">Locality</a></li>
              <li><a href="#" class="dropdown-option">Province</a></li>
              <li><a href="#" class="dropdown-option">Super Locale</a></li>
              <li><a href="#" class="dropdown-option">Country</a></li>
            </div>
          </div>
          <div class="uk-form uk-form-width-medium uk-padding-small"><input class="uk-input partners-input" type="text" placeholder="Start typing here..." /></div>
          <div class="uk-inline uk-padding-small">
            <button class="uk-button uk-padding-small uk-padding-remove-top uk-padding-remove-bottom uk-text-capitalize partners-dropdown" type="button">Filters<span uk-icon="icon: triangle-down" class="uk-margin-left"></span></button>
            <div uk-dropdown="mode: click">
              <li><a href="#" class="dropdown-option">Locality</a></li>
              <li><a href="#" class="dropdown-option">Province</a></li>
              <li><a href="#" class="dropdown-option">Super Locale</a></li>
              <li><a href="#" class="dropdown-option">Country</a></li>
            </div>
          </div>
          <div class="uk-padding-small"><button class="uk-button-primary uk-border-rounded"><%= image_tag('updown.png', class: 'uk-icon-image partners-updown-icon')%></button></div>
        </div>
      </div>
    </div>
    <div class="uk-grid uk-margin-remove uk-width-1-1">
      <div class="uk-padding-remove uk-width-1-1">
        <div class="uk-panel uk-margin-remove uk-border-rounded localities-panel">
          <div class="uk-padding-small localities-panel-header"><span>Featured</span></div>
          <div class="uk-padding small table-content-container">
            <div class="content-well p-x-2 p-y-2"><div class="uk-container"></div></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
